<div id="bodySection" class="container-fluid" style="padding: 30px">
    <form action="/addpost" method="POST">
          <h6>Image</h6>
          <input type="file" id="myFile" name="filename2">
      <br><br>
          <h5>CHECK AVAILABILITY</h5>
          <div class="form-group">
            <select class="form-control" id="availability" name="availability" onchange="getSelectAvailability()">
              <option></option>
              <option>AVAILABLE</option>
              <option>BOOKED</option>
            </select>
          </div>
          <div class="form-group">
              <label for="titlein"><h5>Title</h5></label><br>
              <input type="text" class="form-control" id="title" name="title">
          </div>
          <h5>Select Capacity :</h5>
          <div class="form-group">
            <select class="form-control" id="selectrange" name="selectrange" onchange="getSelectStudentRange()">
              <option></option>
              <option>0-100</option>
              <option>100-250</option>
              <option>250-500</option>
              <option>500-750</option>
              <option>750-1000</option>
            </select>
          </div>
        <br>
          <h5>Select Facilities provided</h5>
          <div class="form-check">
              <input type="checkbox" id="ac" name="ac" class="form-check-input" value="Air Conditioner" onchange="getCheckBoxAC()">Air Conditioner<br>
              <input type="checkbox" id="watersupply" name="watersupply" class="form-check-input" value="Water Supply" onclick="getCheckBoxWater()">Water Supply<br>
              <input type="checkbox" id="stage" name="stage" class="form-check-input" value="Stage" onclick="getCheckBoxStage()">Stage<br>
              <input type="checkbox" id="projector" name="projector" class="form-check-input" value="Projector" onclick="getCheckBoxProjector()">Projector<br>
          </div>
        <br>
          <div class="form-group">
            <label for="comment"><h5>Description</h5></label>
              <textarea class="form-control" rows="5" id="description" name="description"></textarea>
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>